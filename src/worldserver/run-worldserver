#!/bin/bash
# Massive Network Game Object Server
# autorestart Script

while :
do
	echo "MaNGOS daemon restarted"
	echo `date` >> crash.log &
	./worldserver | tail -n 20 >> crash_worldserver.log
	echo " " >> crash.log &
	pid=`ps ax | awk '($5 ~ /worldserver/) { print $1 }'`
	wait $pid
        echo `date` ", MaNGOS daemon crashed and restarted." >> serverlog
done
